<body>

<%= render "common/header" %>

    <div class="content">
        <div class="layout">
            <div class="main">
                <div class="m-section">
                    <div class="section-heading">
                        <div class="breadcrumb"><i class="icon icon-home"></i><a href="/index">首页</a> &gt; <span>泰国表演</span></div>
                        <h2 class="section-title"><i class="icon icon-performance"></i>泰国表演</h2>
                    </div>
                    <div class="section-content">
                        <ul class="m-it-list mt15">

                          <% @shows.each do |show| %>

                            <li>
                                <h3 class="name"><%= show.title %></h3>
                                <div class="info">
                                    <div class="thumbnail"><%= image_tag(show.images[0].c2.url, alt: "") %></div>
                                    <p class="intro"><%= show.excerpt %>...</p>
                                    <%= link_to "查看详情", show_path(show), :class => "btn btn-primary btn-look" %>
                                </div>
                            </li>

                         <% end %>

                        </ul>
                        <%= paginate @shows %>
                    </div>
                </div>
            </div>

<%= render "common/side" %>

        </div>
    </div>

<%= render "common/footer" %>

</body>
</html>
