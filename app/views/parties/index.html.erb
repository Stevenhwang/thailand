<body>

<%= render "common/header" %>

    <div class="content">
        <div class="layout">
            <div class="main">
                <div class="m-section">
                    <div class="section-heading">
                        <div class="breadcrumb"><i class="icon icon-home"></i><a href="index">首页</a> &gt; <span>高端party</span></div>
                        <h2 class="section-title"><i class="icon icon-balloon"></i>高端party</h2>
                    </div>
                    <div class="section-content">
                        <ul class="party-list">

                          <% @parties.each do |party| %>

                            <li>
                                <img src="/img/party_p1.jpg" alt="" class="thumbnail">
                                <h3 class="name"><%= party.title %></h3>
                                <p class="intro"><%= party.excerpt %>...</p>
                                <%= link_to "查看详情", party_path(party), :class => "btn btn-primary btn-look" %>
                            </li>

                          <% end %>

                        </ul>
                        <%= paginate @parties %>
                    </div>
                </div>
            </div>

<%= render "common/side" %>

        </div>
    </div>

<%= render "common/footer" %>

</body>
</html>
